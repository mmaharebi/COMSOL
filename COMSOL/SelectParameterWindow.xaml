<Window x:Class="COMSOL.SelectParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COMSOL"
        mc:Ignorable="d"
        Title="Select Parameter" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ListView Name="parameters_listView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}" />
                        <GridViewColumn Header="Value" DisplayMemberBinding="{Binding value}"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding description}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="1">
            <Button Content="Select" Width="50" Padding="1"  VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
